<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="1" author="cesar">
        <preConditions onFail="MARK_RAN" onFailMessage="JÃ¡ existe a tabela PEIXE">
            <not>
                <tableExists tableName="PEIXE"/>
            </not>
        </preConditions>

        <createTable tableName="PEIXE">
            <column name="ID" autoIncrement="true" type="int">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_PEIXE"/>
            </column>
            <column name="NOME" type="VARCHAR(100)"/>
            <column name="PESO" type="NUMERIC(5,2)"/>
            <column name="COMPRIMENTO" type="NUMERIC(5,2)"/>
        </createTable>

    </changeSet>
</databaseChangeLog>